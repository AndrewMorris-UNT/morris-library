<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h2>New Item</h2>
    </div>
    <div class="panel-body">
      <%= form_for(@item) do |f| %>
        <% if @item.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

            <ul>
            <% @item.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

         <div class="form-group">
          <%= f.label :title %><br>
          <%= f.text_field :description, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :description %><br>
          <%= f.text_field :description, class: "form-control" %>
        </div>
        
        <button class="btn btn-default dropdown-toggle" type="button" id="Type of Item" data-toggle="dropdown" aria-expanded="true">
            Type of Item
            <span class="caret"></span>
          </button>
          <div class="dropdown">
          <ul class="dropdown-menu" role="menu" aria-labelledby="Type of Item">
            <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Book</a<li>
            <li role="presentation"><a role="menuitem" tabindex="-1" href="#">DVD</a<li>
            <li role="presentation"><a role="menuitem" tabindex="-1" href="#">CD</a<li>
          </ul>
        </div>
<br>
        <div class="form-group">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      <% end %>
  </div>
</div>
